<div class ="container mt-4 mx-auto text-center form-group w-50 w-md-25">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form_height'}) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class: "control-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "control-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me, class: "form-control" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary form-control btn-large" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
